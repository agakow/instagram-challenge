- if @posts.any?
  - @posts.each do |post|
    %h1= link_to post.title, post_path(post)
    = post.description
    = link_to "Edit #{post.title}", edit_post_path(post)
    = link_to "Delete #{post.title}", post_path(post), method: :delete
- else
  %h1 No posts yet

%a{href: new_post_path,} Add a post
